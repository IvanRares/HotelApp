<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/employee_booking_username"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:text="Username"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/employee_booking_startDate"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:text="Start Date"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/employee_booking_endDate"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:text="End Date"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/employee_booking_numberOfRooms"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:text="Number of Rooms"
        android:textAppearance="?attr/textAppearanceListItem" />

    <com.example.hotelapp.utils.ListViewFitHeight
        android:id="@+id/employee_booking_roomList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/employee_booking_totalPrice"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:text="Total Price"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/employee_booking_state"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:text="State"
        android:textAppearance="?attr/textAppearanceListItem" />

</LinearLayout>