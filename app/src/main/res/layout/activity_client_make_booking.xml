<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientMakeBookingActivity">

    <TextView
        android:id="@+id/client_make_booking_dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin Date:"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/client_make_booking_left_guideline"
        app:layout_constraintRight_toLeftOf="@id/client_make_booking_middle_guideline"
        app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline1" />

    <Button
        android:id="@+id/client_make_booking_datePickerButton"
        style="?android:spinnerStyle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Jan 01 2020"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/client_make_booking_left_guideline"
        app:layout_constraintRight_toLeftOf="@id/client_make_booking_middle_guideline"
        app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline2" />

    <TextView
        android:id="@+id/client_make_booking_endDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date:"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/client_make_booking_middle_guideline"
        app:layout_constraintRight_toLeftOf="@id/client_make_booking_right_guideline"
        app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline1" />

    <Button
        android:id="@+id/client_make_booking_endDatePickerButton"
        style="?android:spinnerStyle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Jan 01 2020"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/client_make_booking_middle_guideline"
        app:layout_constraintRight_toLeftOf="@id/client_make_booking_right_guideline"
        app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline2" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/client_make_booking_left_guideline"
        app:layout_constraintRight_toLeftOf="@id/client_make_booking_right_guideline"
        app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline3">

        <ListView
            android:id="@+id/client_make_booking_availableRoomsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animationCache="false"
            android:scrollingCache="false"
            android:smoothScrollbar="true"
            app:layout_constraintLeft_toLeftOf="@id/client_make_booking_left_guideline"
            app:layout_constraintRight_toLeftOf="@id/client_make_booking_right_guideline"
            app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline3" />
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/client_make_booking_left_guideline"
        app:layout_constraintRight_toLeftOf="@id/client_make_booking_right_guideline"
        app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline4">

        <ListView
            android:id="@+id/client_make_booking_amenityList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animationCache="false"
            android:scrollingCache="false"
            android:smoothScrollbar="true"
            app:layout_constraintLeft_toLeftOf="@id/client_make_booking_left_guideline"
            app:layout_constraintRight_toLeftOf="@id/client_make_booking_right_guideline"
            app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline4" />
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price:"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/client_make_booking_left_guideline"
        app:layout_constraintRight_toLeftOf="@id/client_make_booking_middle_guideline"
        app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline5" />

    <TextView
        android:id="@+id/client_make_booking_totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/client_make_booking_middle_guideline"
        app:layout_constraintRight_toLeftOf="@id/client_make_booking_right_guideline"
        app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline5" />

    <TextView
        android:id="@+id/client_make_booking_totalPriceRooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/client_make_booking_middle_guideline"
        app:layout_constraintRight_toLeftOf="@id/client_make_booking_right_guideline"
        app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline5" />

    <TextView
        android:id="@+id/client_make_booking_totalPriceAmenities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/client_make_booking_middle_guideline"
        app:layout_constraintRight_toLeftOf="@id/client_make_booking_right_guideline"
        app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline5" />

    <Button
        android:id="@+id/client_make_booking_makeBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make booking"
        app:layout_constraintLeft_toLeftOf="@id/client_make_booking_left_guideline"
        app:layout_constraintRight_toLeftOf="@id/client_make_booking_right_guideline"
        app:layout_constraintTop_toTopOf="@id/client_make_booking_top_guideline6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/client_make_booking_top_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/client_make_booking_top_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/client_make_booking_top_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/client_make_booking_top_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/client_make_booking_top_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="620dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/client_make_booking_top_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="650dp"  />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/client_make_booking_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/client_make_booking_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/client_make_booking_middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>